<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/store_item2"
    android:layout_margin="@dimen/_6sdp"
    android:background="@drawable/border_gray_radius6"
    android:layout_width="wrap_content"
    android:paddingBottom="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/product_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:minHeight="@dimen/_100sdp"
        android:background="@drawable/border_white_radius6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:textSize="@dimen/_12sdp"
        tools:text="Paket Bersih"
        android:textAppearance="@style/latoBlackBold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_img" />

    <TextView
        android:id="@+id/lbl_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rp 280.000"
        android:textAppearance="@style/latoDefault"
        android:textColor="@color/textBlack"
        app:layout_constraintStart_toStartOf="@+id/product_name"
        app:layout_constraintTop_toBottomOf="@+id/product_name" />

    <TextView
        android:id="@+id/img_rating"
        style="@style/FontAwsomeStyle"
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/ic_star"
        android:textColor="@color/gold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/lbl_harga"
        app:layout_constraintTop_toBottomOf="@+id/lbl_harga" />

    <TextView
        android:id="@+id/txt_rating"
        style="@style/latoDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6"
        android:visibility="gone"
        android:textSize="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_2sdp"
        app:layout_constraintBottom_toBottomOf="@+id/img_rating"
        app:layout_constraintStart_toEndOf="@+id/img_rating"
        app:layout_constraintTop_toTopOf="@+id/img_rating" />


    <TextView
        android:id="@+id/sp_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:text="|"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@+id/txt_rating"
        app:layout_constraintTop_toBottomOf="@+id/lbl_harga" />

    <TextView
        android:id="@+id/lbl_terjual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="Terjual 200"
        app:layout_constraintBottom_toBottomOf="@+id/sp_rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/sp_rating"
        app:layout_constraintTop_toTopOf="@+id/sp_rating" />




</androidx.constraintlayout.widget.ConstraintLayout>