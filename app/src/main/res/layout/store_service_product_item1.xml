<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/store_service_product_item1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp">

    <ImageView
        android:id="@+id/img_banenr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@drawable/border_white_radius6"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="@dimen/_161sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Butuh Jasa ? Tenang, Onklas Juga Punya"
        android:textAppearance="@style/latoBlackBold"
        android:textColor="@color/white"
        android:textSize="@dimen/_22sdp"

        app:layout_constraintStart_toStartOf="@+id/img_banenr"
        app:layout_constraintTop_toTopOf="@+id/img_banenr" />


    <RelativeLayout
        android:layout_width="@dimen/_154sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_white_radius6"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="@color/white" />

        <TextView
            android:id="@+id/lihat_semua"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Lihat Semua"
            android:textAppearance="@style/latoBlackBold"
            android:textColor="@color/white" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>