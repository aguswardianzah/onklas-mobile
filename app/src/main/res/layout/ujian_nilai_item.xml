<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_12sdp"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_biologi_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/ujian_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        tools:text="BIOLOGI"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image"
        />
    <TextView
        android:id="@+id/ujian_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:textColor="@color/textBlack"
        tools:text="Dra.Sumarmiati. S.Si"
        app:layout_constraintTop_toBottomOf="@+id/ujian_title"
        app:layout_constraintStart_toEndOf="@id/image"
        />
    <View
        android:id="@+id/divider_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/image"
        />
    <TextView
        android:id="@+id/label_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/_10ssp"
        android:text="Tanggal"
        app:layout_constraintTop_toBottomOf="@+id/divider_title"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/text_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_10sdp"
        tools:text="14 September 2021"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/divider_title"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View
        android:id="@+id/divider_tanggal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@+id/label_tanggal"
        />
    <TextView
        android:id="@+id/label_ujian_nilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/_10ssp"
        tools:text="Nilai Ujian:"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@+id/divider_tanggal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        />
    <ImageView
        android:id="@+id/background_nilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/border_ujian_nilai_blue"
        app:layout_constraintTop_toTopOf="@+id/label_ujian_nilai"
        app:layout_constraintBottom_toBottomOf="@+id/label_ujian_nilai"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/ujian_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="76"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/background_nilai"
        app:layout_constraintBottom_toBottomOf="@+id/background_nilai"
        app:layout_constraintStart_toStartOf="@+id/background_nilai"
        app:layout_constraintEnd_toEndOf="@+id/background_nilai"
        />

</androidx.constraintlayout.widget.ConstraintLayout>