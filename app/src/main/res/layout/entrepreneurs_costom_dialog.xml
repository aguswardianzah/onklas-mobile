<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_18sdp"
    android:paddingVertical="@dimen/_8sdp">

    <ImageView
        android:id="@+id/img_dialog"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_180sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:background="@drawable/img_danger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title"
        style="@style/latoBlackBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Tolak Orderan"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="@+id/img_dialog"
        app:layout_constraintStart_toStartOf="@+id/img_dialog"
        app:layout_constraintTop_toBottomOf="@+id/img_dialog" />

    <TextView
        android:id="@+id/txt_desc"
        style="@style/latoDefault"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:gravity="center"
        android:text="Orderan yang ditolak berpotensi mengecewakan pembeli"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <requestFocus />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_desc"
        tools:layout_editor_absoluteY="409dp">

        <include
            android:id="@+id/button2"
            layout="@layout/entrepreneurs_button_dialog2"
            android:visibility="gone" />

        <include
            android:id="@+id/button1"
            layout="@layout/entrepreneurs_button_dialog1"
            android:visibility="gone" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>