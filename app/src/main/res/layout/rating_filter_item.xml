<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:paddingHorizontal="@dimen/_8sdp"
    android:paddingVertical="@dimen/_5sdp"
    android:layout_margin="@dimen/_3sdp"
    android:background="@drawable/border_gray_radius6"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_filter"
        style="@style/latoDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semua"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_filter"
        app:layout_constraintStart_toEndOf="@+id/txt_filter"
        app:layout_constraintTop_toTopOf="@+id/txt_filter"
        android:src="@drawable/ic_star_solid"
        app:tint="@color/gray"
        />


</androidx.constraintlayout.widget.ConstraintLayout>