<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pages.ppob.listrik.KlaspayListrikTagihan"
    android:background="#E0E0E0"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:id="@+id/border_tagihan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/border_info_ppob"
            app:layout_constraintStart_toStartOf="@+id/text_tagihan"
            app:layout_constraintEnd_toEndOf="@+id/text_tagihan"
            app:layout_constraintTop_toTopOf="@+id/text_tagihan"
            app:layout_constraintBottom_toBottomOf="@+id/text_tagihan"
            />
        <TextView
            android:id="@+id/text_tagihan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:padding="@dimen/_16sdp"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="1. Produk Listrik PLN tidak tersedia pada jam cut off / maintenance (23.00 - 01.00)
            \n2. Jatuh tempo pembayaran tagiahn listrik adalah tanggal di setiap bulannya
            \n3. Proses verifikasi pembayaran maksimum 2 x 24 jam kerja"
            tools:ignore="HardcodedText" />
        <View
            android:id="@+id/bg_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sp_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Space
            android:id="@+id/sp_bottom"
            android:layout_width="0dp"
            android:layout_height="@dimen/_8sdp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_total"
            />
        <TextView
            android:id="@+id/label_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:text="Total Pembayaran"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_total"
            app:layout_constraintBottom_toBottomOf="@+id/text_total"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/label_rp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:text="Rp"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toStartOf="@+id/text_total"
            app:layout_constraintTop_toTopOf="@+id/text_total"
            app:layout_constraintBottom_toBottomOf="@+id/text_total"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/text_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="0"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_next"
            tools:text="52.750"
            tools:ignore="HardcodedText" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_next"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="SELANJUTNYA"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/form_button_color"
            app:cornerRadius="@dimen/_24sdp"
            tools:ignore="HardcodedText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/_16sdp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>