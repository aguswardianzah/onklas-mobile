<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="@dimen/_2sdp"
        android:left="@dimen/_2sdp">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#00E2E2E2"
                android:startColor="#10BABABA" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/_2sdp"
        android:left="@dimen/_2sdp"
        android:right="@dimen/_2sdp"
        android:top="@dimen/_2sdp">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/_8sdp" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/ltgray" />

            <solid android:color="@android:color/white" />

        </shape>
    </item>
</layer-list>